<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/change_bg"
    android:padding="10dp">

    <ImageView
        android:id="@+id/ic_music_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:src="@drawable/ic_music_player" />

    <TextView
        android:id="@+id/music_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@id/ic_music_list"
        android:singleLine="true"
        android:text="Title"
        android:textColor="@color/color_black"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/music_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/music_name"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@id/ic_music_list"
        android:singleLine="true"
        android:text="SubTitle"
        android:textColor="@color/gray_color"
        android:textSize="12sp"
        android:textStyle="normal" />

    <ImageView
        android:id="@+id/btn_upload"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:background="@drawable/change_bg"
        android:src="@drawable/ic_upload"></ImageView>


</RelativeLayout>